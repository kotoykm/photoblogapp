<div id="<%= dom_id publication %>">
  <p>
    <strong>Title:</strong>
    <%= publication.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= publication.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= publication.user_id %>
  </p>

  <%= image_tag current_user.avatar, class: "wi-10 rounded-circle" %>

  <div id="images-section" class="my-5">
    <% publication.images.each do |u| %>
      <%= image_tag u, class:"d-block mb-3" %>
    <%end%>
  </div>


</div>
