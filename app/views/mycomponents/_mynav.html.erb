<div class="w-100 d-flex justify-content-center">
    <%= image_tag 'logo.png', class: "w-100 text-center py-3" %>
</div>

<% if user_signed_in? %>
    <div id="user-section" class="py-4">
        <%= image_tag current_user.avatar, class: "wi-25 rounded-circle" %>
        <%= current_user.username %>
    </div>
<%end%>
<div id="menu-area" class="pb-3">
    <ul class="twitter-list p-0">
        <%= link_to "Inicio", root_path, class: "nav-link fw-bold text-white px-4 py-3 mylinks" %>
        <% if user_signed_in? %>
        <%= link_to edit_user_registration_path, class: "nav-link fw-bold text-white px-4 py-3 mylinks" do%>
        <span>Mi cuenta</span>
        <%end%>
        <!--aqui pudo haber ido una sessión de "mis comentarios"-->
        <%= link_to "Salir", destroy_user_session_path, class: "nav-link fw-bold text-white px-4 py-3 mylinks" %>
        <%else%>
        <%= link_to "Entrar", new_user_session_path, class: "nav-link fw-bold text-white px-4 py-3 mylinks" %>
        <%= link_to "Registrarse", new_user_registration_path, class: "nav-link fw-bold text-white px-4 py-3 mylinks" %>
        <%end%>
    </ul>
</div>
<%= link_to "Nueva publicación", new_publication_path, class: "btn mybtn w-100 py-3 fs-5 fw-bold text-white shame" %>
<div class="mt-3">

    <hr>
    <p class="text-end">Erick Rivera - 2023</p>

</div>